<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prayer_nav"
    app:startDestination="@id/navigation_remaining_time">
    <fragment
        android:id="@+id/navigation_remaining_time"
        android:name="aslan.aslanov.prayerapp.ui.fragment.remainingTime.RemainingTimeFragment"
        android:label="Remaining Time"
        tools:layout="@layout/fragment_remaining_time" />
    <fragment
        android:id="@+id/navigation_prayer_time"
        android:name="aslan.aslanov.prayerapp.ui.fragment.timings.CurrentTimeFragment"
        android:label="Prayer Time"
        tools:layout="@layout/fragment_current_time" />
    <fragment
        android:id="@+id/navigation_prayer_qibla"
        android:name="aslan.aslanov.prayerapp.ui.fragment.qibla.QiblaFragment"
        android:label="Qibla"
        tools:layout="@layout/fragment_qibla" />
    <fragment
        android:id="@+id/navigation_prayer_calendar"
        android:name="aslan.aslanov.prayerapp.ui.fragment.calendar.CalendarFragment"
        android:label="Prayer month calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/navigation_prayer_events"
        android:name="aslan.aslanov.prayerapp.ui.fragment.events.EventsFragment"
        android:label="Prayer Calendar"
        tools:layout="@layout/fragment_events" />
    <action
        android:id="@+id/action_to_navigate_to_settings"
        app:destination="@+id/navigation_settings" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="aslan.aslanov.prayerapp.ui.fragment.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settings_to_country"
            app:destination="@+id/navigation_country" />
        <action
            android:id="@+id/action_settings_to_quran"
            app:destination="@+id/navigation_quran" />
    </fragment>

    <fragment
        android:id="@+id/navigation_country"
        android:name="aslan.aslanov.prayerapp.ui.fragment.country.CountryFragment"
        android:label="Country"
        tools:layout="@layout/fragment_country">
        <action
            android:id="@+id/action_country_to_city_fragment"
            app:destination="@+id/navigation_city" />
    </fragment>
    <fragment
        android:id="@+id/navigation_city"
        android:name="aslan.aslanov.prayerapp.ui.fragment.city.CityFragment"
        android:label="City"
        tools:layout="@layout/fragment_city">
        <argument
            android:name="countryName"
            android:defaultValue="Azerbaijan"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_quran"
        android:name="aslan.aslanov.prayerapp.ui.fragment.surah.QuranSurahFragment"
        android:label="Quran"
        tools:layout="@layout/fragment_quran_surahs">
        <action
            android:id="@+id/action_navigation_quran_to_navigation_quran_ayahs"
            app:destination="@+id/navigation_quran_ayahs" />
        <action
            android:id="@+id/action_navigation_quran_to_navigation_quran_language"
            app:destination="@id/navigation_quran_language" />
    </fragment>
    <fragment
        android:id="@+id/navigation_quran_language"
        android:name="aslan.aslanov.prayerapp.ui.fragment.language.LanguageFragment"
        android:label="Quran Language"
        tools:layout="@layout/fragment_language">
    </fragment>

    <fragment
        android:id="@+id/navigation_quran_ayahs"
        android:name="aslan.aslanov.prayerapp.ui.fragment.ayahs.AyahsFragment"
        android:label="Quran Ayahs"
        tools:layout="@layout/fragment_ayahs" >
        <action
            android:id="@+id/action_navigation_quran_ayahs_to_navigation_quran_ayah"
            app:destination="@+id/navigation_quran_ayah" />
        <argument
            android:name="surahNum"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/navigation_quran_ayah"
        android:name="aslan.aslanov.prayerapp.ui.fragment.ayah.AyahFragment"
        android:label="Quran"
        tools:layout="@layout/fragment_ayah" >
        <argument
            android:name="ayahNum"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>